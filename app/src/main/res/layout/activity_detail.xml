<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/detail_car"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".DetailActivity">

        <ImageView
            android:id="@+id/img_photo_recieved"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="-20dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_name_recieved"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cars_name"
            android:textSize="30sp"
            android:textStyle="bold"
            android:paddingLeft="16dp"
            android:layout_below="@+id/img_photo_recieved" />

        <TextView
            android:id="@+id/tv_descriptiontxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:paddingLeft="16dp"
            android:textAlignment="textStart"
            android:text="@string/descriptiontxt"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@id/tv_name_recieved"/>

        <TextView
            android:id="@+id/tv_description_recieved"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textAlignment="textStart"
            android:text="@string/description"
            android:textSize="16sp"
            android:layout_below="@id/tv_descriptiontxt"/>

        <LinearLayout
            android:layout_below="@id/tv_description_recieved"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="64dp">

            <Button
                android:id="@+id/btn_buy"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="32dp"
                android:layout_weight="1"
                android:text="Buy now"
                android:textColor="@color/white"
                android:textSize="16sp" />
            <ImageButton
                android:id="@+id/btn_favorite"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_marginTop="32dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:textSize="16sp"
                android:background="@null"
                android:src="@drawable/ic_favorite"
                />
        </LinearLayout>


    </RelativeLayout>

</ScrollView>
